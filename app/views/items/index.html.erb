<h1>Items#index</h1>
<p>Find me in app/views/items/index.html.erb</p>

<% @items.each do |item| %>
  <li><strong><%= item.name %></strong>
    <% if item.exp_date %>  -- Expires: <%= item.exp_date %><% end %> in the <%= item.container_type %> <% if item.container_type == "Shopping List" %><%= link_to "Bought!", edit_category_item_path(@category, item), class: "btn btn-success" %> <% else %>
    <%= form_for [item, @category], {url: category_item_path(@category, item)} do |f| %>
      <%= f.hidden_field :name %>
      <%= f.submit "Add to Shopping List",  class: "btn btn-success"%>
    <% end %><% end %></li>
<% end %>
